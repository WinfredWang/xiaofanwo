<?xml version="1.0"?>      
<!DOCTYPE hibernate-mapping PUBLIC       
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"      
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">      
<hibernate-mapping>      
    <class name="com.xiaofanwo.entity.User" table="t_user">      
        <id name="id"></id>
        <property name="name" not-null="true"/> 
        <property name="registerTime" not-null="true" column="register_time"/> 
        <property name="lastLoginTime" not-null="true" column="last_login_time"/> 
        <property name="lastLoginIP" column="last_login_time"/> 
        <property name="password" not-null="true"/>
    </class>      
</hibernate-mapping> 